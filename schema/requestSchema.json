{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "code",
        "path"
    ],
    "properties": {
        "code": {
            "type": "string",
            "description": "request code"
        },
        "path": {
            "type": "string",
            "description": "path to request file"
        },
        "schema": {
            "type": "string",
            "description": "path to request schema file"
        }
    }
}